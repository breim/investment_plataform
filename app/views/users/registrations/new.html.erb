<div class="container">
  <div class="col-sm-4 col-md-offset-4">
    <center>
      <h2>Cadastre-se</h2>
      JÃ¡ tem cadastro ? <%= link_to 'FaÃ§a seu login',  new_user_session_path  %>
    </center>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.text_field :first_name, autofocus: true %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :last_name  %>
      </div>
    </div>
    <div class="field">
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class="field">
      <% if @validatable %>
      <em class="pull-right">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <div class="actions">
      <%= f.submit "Efetuar cadastro", class: 'btn btn-success btn-block' %>
    </div>
    <% end %>
  </div>
</div>