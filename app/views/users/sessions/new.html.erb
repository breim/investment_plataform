<div class="container">
  <div class="col-sm-4 col-md-offset-4">
    <center>
      <h2>Entrar</h2>
      NÃ£o tem conta? <%= link_to 'Cadastre-se',  new_user_registration_path  %>
    </center>
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "off", help: "<a href='/users/password/new'>Esqueceu a senha ?</a>".html_safe %>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
    </div>
    <% end -%>
    <div class="actions">
      <%= f.submit "Fazer login", class: 'btn btn-success btn-block' %>
    </div>
    <% end %>
  </div>
</div>